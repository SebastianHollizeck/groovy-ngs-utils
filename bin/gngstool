#!/bin/bash
########################################################################
#
# Simple Groovy-NGS-Utils runner
#
# Runs a specified tool built into GNGS
# 
#   gngstool <tool class>
#
# Automatically sets up classpath and launches java with tool as main.
#
########################################################################
#
GNGS=$(dirname `dirname $0`)

if [ -z "$GROOVY_HOME" ];
then
    GROOVY_BIN=`which groovy` || { echo "Could not find groovy in your path and GROOVY_HOME is not set. Please install groovy or set GROOVY_HOME."; exit 1; }
    
    GROOVY_HOME=`dirname $(dirname $GROOVY_BIN)`
fi

GROOVY_ALL_JAR=`ls $GROOVY_HOME/embeddable/groovy-all* | grep -v indy | head -n 1`

: ${GNGS_MEM:=8g}

cmd=$1;
shift;

if [ -z "$cmd" ];
then
    echo
    echo "Usage: gngstool <command> <args> ..."
    echo
    exit 1
fi

CP="$GROOVY_ALL_JAR:$GNGS/eclipse-build:$GNGS/build/libs/groovy-ngs-utils.jar:$GNGS/groovy-ngs-utils.jar"

java -Djsse.enableSNIExtension=false -Xmx${GNGS_MEM} -cp $CP gngs.tools.${cmd} $@
